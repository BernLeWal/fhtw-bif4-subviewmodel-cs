<UserControl x:Class="WpfSubViewExample.Views.SingleLineSearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfSubViewExample.Views" xmlns:viewmodels="clr-namespace:WpfSubViewExample.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">
    <DockPanel>
        <Label Content="Searchtext:" DockPanel.Dock="Left"/>
        <Button DockPanel.Dock="Right" Content="Search" Margin="5,5,5,5" Command="{Binding SearchCommand}"/>
        <TextBox Text="{Binding SearchText}" Margin="5,5,5,5"/>
    </DockPanel>
</UserControl>
